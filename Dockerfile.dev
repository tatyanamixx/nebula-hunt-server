FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install nodemon globally for development
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Start the application with nodemon for hot reloading
CMD ["npm", "run", "dev"] 