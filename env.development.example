# =============================================================================
# Nebulahunt Server - Development Environment
# =============================================================================
# 
# ⚠️  ВАЖНО: Этот файл содержит настройки для development окружения.
# Скопируйте в .env.development и заполните реальными значениями.
#
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app-dev.log

# =============================================================================
# DATABASE - DEVELOPMENT
# =============================================================================
DB_HOST_DEV=localhost
DB_PORT_DEV=5432
DB_NAME_DEV=nebulahunt_dev
DB_USER_DEV=postgres
DB_PASSWORD_DEV=your_dev_password
DB_LOGGING=true

# =============================================================================
# DATABASE SSL CONFIGURATION
# =============================================================================
DB_SSL=false
DB_SSL_CA_PATH=
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=
DB_SSL_REJECT_UNAUTHORIZED=false

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT TOKENS
# =============================================================================
# ⚠️  ВНИМАНИЕ: Используйте разные секреты для каждого окружения!
JWT_ACCESS_SECRET=dev_access_secret_key_development_change_this
JWT_REFRESH_SECRET=dev_refresh_secret_key_development_change_this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=nebulahunt-server
JWT_ACCESS_AUDIENCE=nebulahunt-users
JWT_REFRESH_AUDIENCE=nebulahunt-users

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# ⚠️  ВНИМАНИЕ: Используйте тестовый токен бота для development!
BOT_TOKEN=your_telegram_bot_token_dev
TELEGRAM_WEBHOOK_URL=

# =============================================================================
# SECURITY
# =============================================================================
# ADMIN_EMAIL администраторов (через запятую)
ADMIN_EMAIL=123445@host.com

# ID системного пользователя
SYSTEM_USER_ID=999999999

# Секрет для инициализации админа
ADMIN_INIT_SECRET=dev_admin_init_secret_change_this

# Rate limiting (более мягкие настройки для development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000

# CORS настройки
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# IP безопасность (отключено для development)
BLACKLISTED_IPS=
ADMIN_WHITELISTED_IPS=
ADMIN_IP_RESTRICTION=false

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# TON Network (используйте testnet для development)
TON_NETWORK=testnet
TON_API_KEY=your_ton_api_key_dev
TON_WALLET_ADDRESS=your_ton_wallet_address_dev

# =============================================================================
# MIGRATIONS
# =============================================================================
RUN_MIGRATIONS=false 