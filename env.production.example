# =============================================================================
# Nebulahunt Server - Production Environment
# =============================================================================
# 
# ⚠️  КРИТИЧНО ВАЖНО: Этот файл содержит настройки для production окружения.
# НИКОГДА не коммитьте реальные секреты в git!
# Скопируйте в .env.production и заполните реальными значениями.
#
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=5000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app-prod.log

# =============================================================================
# DATABASE - PRODUCTION
# =============================================================================
DB_HOST_PROD=your-production-db-host.com
DB_PORT_PROD=5432
DB_NAME_PROD=nebulahunt_prod
DB_USER_PROD=nebulahunt_user
DB_PASSWORD_PROD=your_secure_production_password

# =============================================================================
# DATABASE SSL CONFIGURATION
# =============================================================================
# ⚠️  ОБЯЗАТЕЛЬНО: Включите SSL для production!
DB_SSL=true
DB_SSL_CA_PATH=/etc/ssl/certs/ca-certificate.crt
DB_SSL_CERT_PATH=/etc/ssl/certs/client-certificate.crt
DB_SSL_KEY_PATH=/etc/ssl/private/client-key.key
DB_SSL_REJECT_UNAUTHORIZED=true

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# JWT TOKENS
# =============================================================================
# ⚠️  КРИТИЧНО: Используйте криптографически стойкие секреты!
JWT_ACCESS_SECRET=your_very_secure_access_secret_key_production_change_this
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_production_change_this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# ⚠️  КРИТИЧНО: Используйте production токен бота!
BOT_TOKEN=your_production_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# SECURITY
# =============================================================================
# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# ID системного пользователя
SYSTEM_USER_ID=-1

# Секрет для инициализации админа
ADMIN_INIT_SECRET=your_very_secure_admin_init_secret_production

# Rate limiting (строгие настройки для production)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS настройки (только production домены)
CORS_ORIGIN=https://your-frontend-domain.com
CLIENT_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-api-domain.com

# IP безопасность (включено для production)
BLACKLISTED_IPS=192.168.1.100,10.0.0.50
ADMIN_WHITELISTED_IPS=192.168.1.1,10.0.0.1
ADMIN_IP_RESTRICTION=true

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# TON Network (используйте mainnet для production)
TON_NETWORK=mainnet
TON_API_KEY=your_ton_api_key_production
TON_WALLET_ADDRESS=your_ton_wallet_address_production

# =============================================================================
# MIGRATIONS
# =============================================================================
RUN_MIGRATIONS=false 