# =============================================================================
# Nebulahunt Server - Test Environment
# =============================================================================
# 
# ⚠️  ВАЖНО: Этот файл содержит настройки для test окружения.
# Скопируйте в .env.test и заполните реальными значениями.
#
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=test
PORT=5001

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=error
LOG_FILE_PATH=logs/app-test.log

# =============================================================================
# DATABASE - TEST
# =============================================================================
DB_HOST_TEST=localhost
DB_PORT_TEST=5432
DB_NAME_TEST=nebulahunt_test
DB_USER_TEST=postgres
DB_PASSWORD_TEST=your_test_password

# =============================================================================
# DATABASE SSL CONFIGURATION
# =============================================================================
DB_SSL=false
DB_SSL_CA_PATH=
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=
DB_SSL_REJECT_UNAUTHORIZED=false

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT TOKENS
# =============================================================================
# ⚠️  ВНИМАНИЕ: Используйте тестовые секреты для тестов!
JWT_ACCESS_SECRET=test_access_secret_key_change_this
JWT_REFRESH_SECRET=test_refresh_secret_key_change_this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# ⚠️  ВНИМАНИЕ: Используйте тестовый токен бота!
BOT_TOKEN=test_telegram_bot_token
TELEGRAM_WEBHOOK_URL=

# =============================================================================
# SECURITY
# =============================================================================
# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# ID системного пользователя
SYSTEM_USER_ID=999999999

# Секрет для инициализации админа
ADMIN_INIT_SECRET=test_admin_init_secret_change_this

# Rate limiting (мягкие настройки для тестов)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000

# CORS настройки
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# IP безопасность (отключено для тестов)
BLACKLISTED_IPS=
ADMIN_WHITELISTED_IPS=
ADMIN_IP_RESTRICTION=false

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9091
METRICS_ENABLED=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# TON Network (используйте testnet для тестов)
TON_NETWORK=testnet
TON_API_KEY=your_ton_api_key_test
TON_WALLET_ADDRESS=your_ton_wallet_address_test

# =============================================================================
# MIGRATIONS
# =============================================================================
RUN_MIGRATIONS=true 