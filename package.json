{
	"name": "tg-mini-app-server",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start": "cross-env NODE_ENV=production node index.js",
		"dev": "cross-env NODE_ENV=development nodemon index.js",
		"dev:test": "dotenv -e .env.test -- cross-env NODE_ENV=test nodemon index.js",
		"dev:prod": "dotenv -e .env.production -- cross-env NODE_ENV=production nodemon index.js",
		"test": "cross-env NODE_ENV=test jest --detectOpenHandles",
		"test:unit": "cross-env NODE_ENV=test RUN_MIGRATIONS=false jest --detectOpenHandles",
		"test:integration": "cross-env NODE_ENV=test RUN_MIGRATIONS=true jest --config=jest.integration.config.js --detectOpenHandles",
		"test:integration:api": "cross-env NODE_ENV=test RUN_MIGRATIONS=true jest --config=jest.integration.config.js --testPathPatterns=api --detectOpenHandles",
		"test:integration:service": "cross-env NODE_ENV=test RUN_MIGRATIONS=true jest --config=jest.integration.config.js --testPathPatterns=service --detectOpenHandles",
		"test:integration:database": "cross-env NODE_ENV=test RUN_MIGRATIONS=true jest --config=jest.integration.config.js --testPathPatterns=database --detectOpenHandles",
		"test:integration:external": "cross-env NODE_ENV=test RUN_MIGRATIONS=true jest --config=jest.integration.config.js --testPathPatterns=external --detectOpenHandles",
		"test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles",
		"migrate": "sequelize-cli db:migrate",
		"migrate:test": "dotenv -e .env.test -- sequelize-cli db:migrate",
		"migrate:prod": "dotenv -e .env.production -- sequelize-cli db:migrate",
		"migrate:undo": "sequelize-cli db:migrate:undo",
		"migrate:undo:all": "sequelize-cli db:migrate:undo:all",
		"seed": "sequelize-cli db:seed:all",
		"seed:test": "dotenv -e .env.test -- sequelize-cli db:seed:all",
		"seed:undo": "sequelize-cli db:seed:undo:all",
		"security:check": "node scripts/check-env-security.js",
		"security:check:dev": "NODE_ENV=development node scripts/check-env-security.js",
		"security:check:prod": "NODE_ENV=production node scripts/check-env-security.js",
		"setup:env": "node scripts/setup-env.js",
		"decode:initdata": "node scripts/decode-telegram-initdata.js",
		"log:debug": "node scripts/set-log-level.js debug",
		"log:info": "node scripts/set-log-level.js info",
		"log:error": "node scripts/set-log-level.js error",
		"log:current": "node scripts/set-log-level.js --current"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"engines": {
		"node": "20.x"
	},
	"dependencies": {
		"@telegram-apps/init-data-node": "^2.0.7",
		"axios": "^1.10.0",
		"bcrypt": "^6.0.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"cron": "^4.3.1",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.2.1",
		"helmet": "^8.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"node-cron": "^3.0.3",
		"nodemailer": "^7.0.5",
		"pg": "^8.15.6",
		"pg-hstore": "^2.3.4",
		"pino": "^9.7.0",
		"pino-http": "^10.4.0",
		"pino-pretty": "^13.0.0",
		"prom-client": "^15.1.3",
		"sequelize": "^6.37.7",
		"sequelize-cli": "^6.6.3",
		"speakeasy": "^2.0.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"validator": "^13.15.15",
		"xss-clean": "^0.1.4"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"dotenv-cli": "^8.0.0",
		"jest": "^30.0.4",
		"nodemon": "^3.1.10",
		"sqlite3": "^5.1.7",
		"supertest": "^7.1.3"
	}
}
